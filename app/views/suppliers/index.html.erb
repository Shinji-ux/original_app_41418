<div class="table_container">
  <div class="section-title">
    仕入れ先の一覧
  </div>
  <table class="table-bordered">
    <thead>
      <tr>
        <th>会社名</th>
        <th>電話番号</th>
        <th>詳細</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= supplier.company %></td>
          <td><%= supplier.phone %></td>
          <td class="table-link"><%= link_to '詳細', supplier_path(supplier.id) %></td>
          <td class="table-link"><%= link_to '編集', edit_supplier_path(supplier.id) %></td>
          <td class="table-link"><%= link_to '削除', supplier_path(supplier.id), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="back">
    <%= link_to  '前のページに戻る', root_path %>
  </div>
</div>

