<h1>請求書用の検索画面</h1>

<%= form_with url: sells_receipt_path, method: :get, local: true do %>
  <div>
    <%= label_tag :customer_id, "得意先" %>
    <%= select_tag :customer_id, options_from_collection_for_select(@customers, :id, :company, params[:customer_id]), prompt: "得意先を選択" %>
  </div>

  <div>
    <%= label_tag :start_date, "開始日" %>
    <%= date_field_tag :start_date, params[:start_date] %>
  </div>

  <div>
    <%= label_tag :end_date, "終了日" %>
    <%= date_field_tag :end_date, params[:end_date] %>
  </div>

  <div>
    <%= submit_tag "検索" %>
  </div>
<% end %>