<div class="table_container">
  <div class="section-title">
    カテゴリ一覧
  </div>

  <table class="table-bordered">
    <thead>
      <tr>
        <th>カテゴリー</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.category %></td>
          <td class="table-link"><%= link_to '編集', edit_category_path(category.id) %></td>
          <td class="table-link"><%= link_to '削除', category_path(category.id), data: { turbo_method: :delete, confirm: '削除してもよろしいですか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="back">
    <%= link_to  '前のページに戻る', root_path %>
  </div>

</div>