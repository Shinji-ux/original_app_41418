<h1>得意先の登録</h1>

<%= form_with model: @customer, local: true do |f| %>
  <div>
    <%= f.label :company, '得意先会社名' %>
    <%= f.text_field :company %>
  </div>
  <div>
    <%= f.label :city, '市区町村' %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :address, '住所' %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :phone, '電話番号' %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= form_with(url: import_customers_path, local: true, multipart: true) do |form| %>
  <div class="form-group">
    <%= form.label :file, "CSVファイルを選択" %>
    <%= form.file_field :file %>
  </div>
  <div class="actions">
    <%= form.submit "インポート" %>
  </div>
<% end %>

<%= link_to 'ホームに戻る', root_path %>