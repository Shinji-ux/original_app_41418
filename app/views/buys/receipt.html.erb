<div class="table_container">
  <div class="section-title">
    支払い明細書の作成
  </div>

  <div class="sub-title">
    <%= @supplier.company %><br>
    <%= @start_date %> ～ <%= @end_date %>
  </div>

  <table class="table-bordered">
    <thead>
      <tr>
        <th>日付</th>
        <th>金額</th>
      </tr>
    </thead>
    <tbody>
      <% @receipts.each do |receipt| %>
        <tr>
          <td><%= receipt.transaction_date %></td>
          <td><%= receipt.total_price %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <td>合計</td>
      <td><%= @receipts.sum(&:total_price) %></td>
    </tfoot>
  </table>

  <div class="back">
    <%= link_to  '前のページに戻る', buys_search_path %>
  </div>
</div>

