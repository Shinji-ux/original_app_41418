<div class="table_container">
  <div class="section-title">
    発注履歴
  </div>

  <table class="table-bordered">
    <thead>
      <tr>
        <th>発注日</th>
        <th>発注先</th>
        <th>金額</th>
        <th>詳細</th>
        <th>編集</th>
        <th>削除</th>
        <th>印刷</th>
      </tr>
    </thead>
    <tbody>
      <% @buys.each do |buy| %>
        <tr>
          <td class="table-day"><%= buy.transaction_date %></td>
          <td class="table-name"><%= buy.supplier.company %></td>
          <td class="table-price"><%= buy.total_price %></td>
          <td class="table-link"><%= link_to '詳細', supplier_buy_path(supplier_id: buy.supplier_id, id: buy.id) %></td>
          <td class="table-link"><%= link_to '編集', edit_supplier_buy_path(supplier_id: buy.supplier_id, id: buy.id) %></td>
          <td class="table-link"><%= link_to '削除', supplier_buy_path(supplier_id: buy.supplier_id, id: buy.id), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
          <td class="table-link"><%= link_to '印刷', supplier_buy_path(supplier_id: buy.supplier_id, id: buy.id, format: :pdf), target: '_blank' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="back">
    <%= link_to  '前のページに戻る', root_path %>
  </div>
</div>