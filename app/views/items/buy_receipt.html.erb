<div>仕入れ商品別集計</div>

<h1>仕入れ商品別の集計</h1>
  <%= @start_date %>～<%= @end_date %>
  <%= @item.item_name %>の集計

    <table class="table-bordered">
      <thead>
        <tr>
          <th>日付</th>
          <th>仕入れ先</th>
          <th>数量</th>
          <th>単位</th>
          <th>金額</th>
        </tr>
      </thead>
      <tbody>
        <% @buy_receipts.each do |buy_receipt| %>
          <% buy_item = buy_receipt.buy_items.find_by(item_id: @item_id) %>
          <tr>
            <td>
              <%= buy_receipt.transaction_date %>
            </td>
            <td>
              <%= buy_receipt.supplier.company %>
            </td>
            <td>
              <%= buy_item.quantity %>
            </td>
            <td>
              <%= @item.unit %>
            </td>

            <td>
              <%= buy_item.item_price %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <td>合計</td>
        <td></td>
        <td><%= @buy_receipts.joins(:buy_items).where(buy_items: { item_id: @item_id }).sum('buy_items.quantity') %></td>
        
        <td><%= @item.unit %></td>
        <td><%= @buy_receipts.joins(:buy_items).where(buy_items: { item_id: @item_id }).sum('buy_items.item_price') %></td>
      </tfoot>
    </table>